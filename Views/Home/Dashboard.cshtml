@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-tachometer-alt text-primary"></i> Dashboard</h2>
                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                    <button type="submit" class="btn btn-outline-danger">
                        <i class="fas fa-sign-out-alt"></i> Çıkış Yap
                    </button>
                </form>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-user"></i> Kullanıcı Bilgileri</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-6">
                            <strong>Ad Soyad:</strong>
                        </div>
                        <div class="col-sm-6">
                            @ViewBag.FullName
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-sm-6">
                            <strong>Email:</strong>
                        </div>
                        <div class="col-sm-6">
                            @ViewBag.UserName
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-sm-6">
                            <strong>Giriş Zamanı:</strong>
                        </div>
                        <div class="col-sm-6">
                            @DateTime.Now.ToString("dd.MM.yyyy HH:mm")
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-chart-line"></i> Hızlı İstatistikler</h5>
                </div>
                <div class="card-body">
                    <div class="text-center">
                        <div class="mb-3">
                            <i class="fas fa-users fa-2x text-primary"></i>
                            <h4 class="mt-2">1,247</h4>
                            <small class="text-muted">Toplam Kullanıcı</small>
                        </div>
                        <hr />
                        <div class="mb-3">
                            <i class="fas fa-clock fa-2x text-warning"></i>
                            <h4 class="mt-2">23</h4>
                            <small class="text-muted">Aktif Oturum</small>
                        </div>
                        <hr />
                        <div>
                            <i class="fas fa-shield-alt fa-2x text-success"></i>
                            <h4 class="mt-2">%99.9</h4>
                            <small class="text-muted">Güvenlik Skoru</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-history"></i> Son Aktiviteler</h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fas fa-sign-in-alt text-success me-2"></i>
                                Başarılı giriş yapıldı
                            </div>
                            <small class="text-muted">Şimdi</small>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fas fa-key text-warning me-2"></i>
                                Şifre güncellendi
                            </div>
                            <small class="text-muted">2 saat önce</small>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fas fa-mobile-alt text-info me-2"></i>
                                Mobil cihazdan giriş
                            </div>
                            <small class="text-muted">1 gün önce</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div